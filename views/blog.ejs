<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        pre {
            white-space: pre-wrap;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .blog-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .blog-body {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .author-info {
            margin-top: 20px;
        }

        .author-info img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .author-name {
            font-weight: bold;
        }

        .comment-section {
            margin-top: 20px;
        }

        .comment {
            margin-bottom: 10px;
        }

        .comment img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .comment-content {
            font-size: 16px;
            line-height: 1.4;
        }

        /* Responsive Cover Image */
        .cover-image {
            max-width: 100%;
            height: auto;
        }

        /* Form Styling */
        .comment-form {
            margin-top: 20px;
        }

        .comment-form input[type="text"] {
            width: 70%;
        }

        .comment-form button {
            width: 20%;
        }

        @media (max-width: 768px) {
            .comment-form input[type="text"] {
                width: 100%;
            }

            .comment-form button {
                width: 100%;
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container mt-4">
        <h1 class="blog-title"><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" class="cover-image" alt="Cover Image">
        <p class="blog-body"><%= blog.body %></p>
    </div>

    <div class="container mt-4 author-info">
        <% if (blog.createdBy) { %>
            <div class="d-flex align-items-center">
                <% if (blog.createdBy.profileImageURL) { %>
                    <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Image">
                <% } %>
                <span class="author-name"><%= blog.createdBy.fullName ? blog.createdBy.fullName : 'Anonymous' %></span>
            </div>
        <% } else { %>
            <p>Author information not available.</p>
        <% } %>
    </div>

    <div class="container mt-3 comment-section">
        <h2>Comments (<%= comments.length %>) </h2>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="POST" class="comment-form">
                <div class="input-group">
                    <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                    <button class="btn btn-primary" type="submit">Add</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div class="comment d-flex align-items-center">
                        <% if (comment.createdBy && comment.createdBy.profileImageURL) { %>
                            <img src="<%= comment.createdBy.profileImageURL %>" alt="Comment Author Image">
                        <% } %>
                        <span class="comment-content"><%= comment.content %></span>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <%- include('./partials/script') %>
    <!-- Bootstrap JS and jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
