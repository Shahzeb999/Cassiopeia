<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
    <style>
        pre {
            white-space: pre-wrap;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .blog-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .blog-body {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .author-info {
            margin-top: 20px;
        }

        .author-info img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .author-name {
            font-weight: bold;
        }

        .comment-section {
            margin-top: 20px;
        }

        .comment {
            margin-bottom: 10px;
        }

        .comment img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .comment-content {
            font-size: 16px;
            line-height: 1.4;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container mt-4">
        <h1 class="blog-title"><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="500px" height="300px" >
        <p class="blog-body"><%= blog.body %></p>
    </div>

    <div class="container mt-4 author-info">
        <% if (blog.createdBy) { %>
            <div>
                <% if (blog.createdBy.profileImageURL) { %>
                    <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Image">
                <% } %>
                <span class="author-name"><%= blog.createdBy.fullName ? blog.createdBy.fullName : 'Anonymous' %></span>
            </div>
        <% } else { %>
            <p>Author information not available.</p>
        <% } %>
    </div>

    <div class="container mt-3 comment-section">
        <h2>Comments (<%= comments.length %>) </h2>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="POST">
                <div>
                    <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                    <button class="btn btn-primary" type="submit">Add</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div class="comment">
                        <% if (comment.createdBy && comment.createdBy.profileImageURL) { %>
                            <img src="<%= comment.createdBy.profileImageURL %>" alt="Comment Author Image">
                        <% } %>
                        <span class="comment-content"><%= comment.content %></span>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
