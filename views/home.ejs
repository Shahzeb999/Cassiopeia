<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
    <style>
        /* Custom styles for this page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
        }

        .card {
            margin-bottom: 20px;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .btn-view {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-view:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-edit {
            color: #fff;
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-edit:hover {
            background-color: #ffaa00;
            border-color: #ffaa00;
        }

        .btn-delete {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-delete:hover {
            background-color: #bd2130;
            border-color: #bd2130;
        }

        .author-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .author-name {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container">
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <% if(blog.coverImageURL) { %>
                            <img class="card-img-top" src="<%= blog.coverImageURL %>" alt="Blog Cover Image">
                        <% } else { %>
                            <!-- Placeholder image if coverImageURL is not available -->
                            <img class="card-img-top" src="/path/to/placeholder-image.jpg" alt="Placeholder Image">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                            <!-- Edit and Delete buttons for the blog owner -->
                            <% if (locals.user && locals.user._id.toString() === blog.createdBy._id.toString()) { %>
                                <form action="/blog/delete/<%= blog._id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this blog?');">Delete</button>
                                </form>
                                <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning">Edit</a>
                            <% } %>

                            <div class="mt-3 author-info">
                                <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Image">
                                <span class="author-name"><%= blog.createdBy.fullName %></span>
                            </div>                           
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
