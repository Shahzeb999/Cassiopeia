<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>User Profile</title>
    <style>
        .user-profile {
            text-align: center;
            max-width: 400px;
            margin: auto;
        }
        .profile-image img {
            border-radius: 50%; /* Circular image */
            width: 200px; /* Increased size */
            height: 200px;
        }
        .user-fullname, .user-email {
            font-size: 1.2em; /* Larger text */
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <% if (locals.user) { %>
            <div class="user-profile">
                <!-- Displaying the User's Profile Image -->
                <div class="profile-image">
                    <img src="<%= locals.user.profileImageURL %>" alt="Profile Image" />
                </div>

                <!-- Displaying the User's Full Name -->
                <div class="user-fullname">
                    <strong>Full Name:</strong> <%= locals.user.fullName %>
                </div>

                <!-- Displaying the User's Email -->
                <div class="user-email">
                    <strong>Email:</strong> <%= locals.user.email %>
                </div>

                <!-- Edit Button -->
                <form class="mt-3" action="/user/edit-profile" method="GET">
                    <button type="submit" class="btn btn-primary">Edit Profile</button>
                </form>
            </div>
        <% } else { %>
            <p>User information is not available.</p>
        <% } %>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
